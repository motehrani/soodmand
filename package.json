    "classnames": "^2.3.2",
    "json-server": "^0.17.2",
    "next": "13.0.3",
    "next-plugin-antd-less": "^1.8.0",
    "next-themes": "^0.2.1",
    "overlayscrollbars-react": "^0.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "^3.39.2",
    "react-slick": "^0.29.0",
    "react-toggle-dark-mode": "^1.1.1",
    "reactstrap": "^9.1.5",
